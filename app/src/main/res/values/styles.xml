<resources>
    <!-- Default them App (BlackGreen)-->
    <style name="AppTheme" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">true</item>

        <item name="imageButtonStyle">@style/AppTheme.ImageButton</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>

        <item name="backgroundContentLeft">@drawable/content_left</item>
        <item name="backgroundContent">@drawable/content_body</item>
    </style>
    <style name="AppTheme.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="tint">@color/white</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">#000</item>
    </style>
    <!-- Custom Them App (BlackPink) -->
    <style name="AppThemePink" parent="AppTheme">
        <item name="colorPrimary">@color/primary_pink</item>
        <item name="colorPrimaryDark">@color/primary_dark_pink</item>
        <item name="colorAccent">@color/accent_pink</item>


        <item name="imageButtonStyle">@style/AppThemePink.ImageButton</item>

        <item name="backgroundContentLeft">@color/pink</item>
        <item name="backgroundContent">@color/pink_dark</item>
    </style>

    <style name="AppThemePink.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="tint">@color/pink</item>
        <item name="android:background">#000</item>
    </style>
</resources>